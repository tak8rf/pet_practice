<%= form_with(model: @pet, local: true) do |form| %>

    <div class="title">
      <div class="form-tag">ペット名</div>
      <%= form.text_field :name %>
    </div>

    <div class="content">
    <div class="form-tag">詳細</div>
    <%= form.text_area :content %>
  </div>
  
   <div class="submit">
      <%= form.submit %>
   </div>
<% end %>